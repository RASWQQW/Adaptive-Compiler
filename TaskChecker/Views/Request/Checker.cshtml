<body>
    <form id="checkingForm" novalidate>
        <input id="TextValue" type="text" placeholder="Type text">
        <button type="button" onclick="submitCheck()">Ready</button>
    </form>
    @*<script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>*@
    <script src="~/lib/jquery/dist/jquery.js" type="text/javascript"></script>
    <script type="text/javascript">
        function submitCheck() {
            var val = { "val": document.getElementById("TextValue").value.toString() };
            alert(val["val"]);
            //alert("Gotten value is " + gottenvalue)
            jQuery.ajax({
                type: 'POST',
                url: '/Request/AjaxCheck',
                contentType: 'application/json', // charset=urf-8, // when we use .serialize() this generates the data in query string format. this needs the default contentType (default content type is: contentType: 'application/x-www-form-urlencoded; charset=UTF-8') so it is optional, you can remove it
                data: JSON.stringify(val),
                dataType: "json",
                success: function () {
                    alert('Successfully received Data');
                    //console.log(result);
                },
                error: function () {
                    alert('Failed to receive the Data');
                    console.log('Failed ');
                }
            })
        };

    </script>

</body>